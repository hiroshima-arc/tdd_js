{
  "name": "tdd_js",
  "version": "1.0.0",
  "description": "テスト駆動開発から始めるJavaScript入門",
  "main": "index.js",
  "scripts": {
    "start": "nf start -j Procfile",
    "build": "npm-run-all build:*",
    "build:doc": "markdown README.md > ./src/readme.html",
    "build:webpack": "webpack --config webpack.prod.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.*",
    "watch": "npm-run-all watch:*",
    "watch:frontend": "watch 'npm-run-all format' ./src ",
    "watch:webpack": "webpack --watch",
    "app": "npm-run-all app:*",
    "app:frontend": "browser-sync start --config bs-config.js",
    "app:webpack": "webpack-dev-server --hot --inline --config webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiroshima-arc/tdd_js.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hiroshima-arc/tdd_js/issues"
  },
  "homepage": "https://github.com/hiroshima-arc/tdd_js#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.1.4",
    "browser-sync": "^2.26.5",
    "clean-webpack-plugin": "^3.0.0",
    "connect-browser-sync": "^2.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "foreman": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "markdown-to-html": "0.0.13",
    "mini-css-extract-plugin": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "watch": "^1.0.2",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-dev-server": "^3.7.1"
  }
}
